<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/chat_padding">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="@dimen/chat_icon_size"
            android:layout_height="@dimen/chat_icon_size"
            android:id="@+id/imageButton2"
            android:background="@drawable/bg_chat_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:id="@+id/textView6"
            android:layout_gravity="center"
            android:textAppearance="@style/AppTheme.Chat.IconText" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Placeholder"
        android:id="@+id/tv_chat_message"
        android:layout_marginLeft="@dimen/chat_padding"
        android:textAppearance="@style/AppTheme.Chat.ChatText"
        android:padding="@dimen/chat_padding_box"
        android:background="@drawable/bg_chat_box_color"
        android:textColor="@color/primaryTextLight" />
</LinearLayout>